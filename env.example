# ===========================================
# VERDICT - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DEMO_MODE=false

# ===========================================
# Supabase Configuration (Required)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Connection pooling URL (Recommended for production)
# Get this from Supabase Dashboard > Settings > Database > Connection Pooling
# SUPABASE_POOLER_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# ===========================================
# Stripe Configuration (Required for payments)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# ===========================================
# Email Configuration (Resend)
# ===========================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key
RESEND_FROM_EMAIL=Verdict <noreply@your-domain.com>

# ===========================================
# Logging & Monitoring (Better Stack)
# ===========================================
# Get your source token from https://logs.betterstack.com
BETTER_STACK_SOURCE_TOKEN=your_better_stack_source_token

# ===========================================
# Optional: Analytics
# ===========================================
# NEXT_PUBLIC_GOOGLE_ANALYTICS=G-XXXXXXXXXX
# NEXT_PUBLIC_POSTHOG_KEY=phc_your_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
